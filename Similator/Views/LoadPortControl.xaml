<UserControl x:Class="Simulator.Views.LoadPortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Simulator.Converters"
             Height="260" Width="220">
    <UserControl.Resources>
        <conv:OccupancyToBrushConverter x:Key="OccToBrush" />
        <Style x:Key="SlotBorderStyle" TargetType="Border">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4,0,0"/>
        <ItemsControl ItemsSource="{Binding Slots}" Margin="8,28,8,8">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- DataContext here is a WaferSlot -->
                    <Border Style="{StaticResource SlotBorderStyle}">
                        <Grid>
                            <Ellipse Fill="{Binding Occupant, Converter={StaticResource OccToBrush}}"
                                     Stroke="Black" StrokeThickness="0.5"/>
                            <TextBlock Text="{Binding SlotIndex}" FontSize="10" 
                                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
